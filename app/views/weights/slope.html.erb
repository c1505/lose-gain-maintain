<%= form_tag("/slope", method: "get") do %>
  <%= label_tag(:q, "Enter days to calculate slope of weight change:") %>
  <%= text_field_tag(:days, params["days"]) %>
  <%= submit_tag("Search") %>
<% end %></br>
<% if @slope_per_week %>
  Slope of Weight change per week: <%= @slope_per_week.round(1) %> Pounds
<% end %>